
<div class="max-w-4xl mx-auto p-5">
  <div class='mb-5'>
    <%= image_tag 'plaza.jpeg', alt: 'Plaza Image', class: 'mx-auto' %>
    <div class="flex items-center justify-center">
      <div class="text-white font-bold text-2xl">Resumo da conversa com Fernanda</div>
    </div>
  </div>
  
  <div class='border border-white rounded p-4'>
    <div class="mb-6 flex items-center space-x-2">
      <h2 class="text-xl font-semibold text-white mr-2">Anos de Experiência:</h2>
      <p class="text-white"><%= @resume.years_of_experience %></p>
    </div>
    
    <div class="mb-6 flex items-center space-x-2">
      <h2 class="text-xl font-semibold text-white mr-2">Linguagem de Programação Favorita:</h2>
      <p class="text-white"><%= @resume.favorite_programming_language %></p>
    </div>
    
    <div class="mb-6 flex items-center space-x-2">
      <h2 class="text-xl font-semibold text-white mr-2">Disposto a Trabalhar Presencialmente:</h2>
      <p class="text-white"><%= @resume.willing_to_work_onsite ? 'Sim' : 'Não' %></p>
    </div>
    
    <div class="mb-6 flex items-center space-x-2">
      <h2 class="text-xl font-semibold text-white mr-2">Disposto a Usar Ruby:</h2>
      <p class="text-white"><%= @resume.willing_to_use_ruby ? 'Sim' : 'Não' %></p>
    </div>
    
    <div class="flex items-center space-x-2">
      <h2 class="text-xl font-semibold text-white mr-2">Data da Entrevista:</h2>
      <p class="text-white">"<%= @resume.interview_date %>"</p>
    </div>
  </div>
  
  <div class="flex space-x-12 mt-16 justify-center">
    <%= link_to 'Voltar pra conversa', chat_path(@resume.chat), class: "bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to 'Voltar ao início', root_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= button_to 'Iniciar outra conversa', chats_path, class: "bg-green-800 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>