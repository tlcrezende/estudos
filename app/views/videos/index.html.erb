<div class="w-full">
  <div class="w-full flex justify-center items-center text-center mt-6">
    <div class='flex space-x-6'>
      <div class="font-bold text-4xl text-white">Gerenciador de Videos</div>
      <div class='flex ml-4 text-lg'>
        <div class='w-7 h-7 bg-yellow-200 rounded-full'><%= @videos.count %></div>
      </div>
    </div>
  </div>
  <%= link_to "Adicionar vÃ­deo", new_video_path, class: "fixed top-4 right-4 rounded-lg py-3 px-5 bg-fuchsia-600 text-white font-medium" %>

  <%= form_with(url: videos_path, method: :get, local: true, id: "framework_form") do |form| %>
    <%= select_tag :framework, options_for_select(Video.frameworks.keys.map { |framework| [framework.titleize, framework] }), prompt: "Selecione um Framework", onchange: "this.form.submit();" %>
    <%= submit_tag "Submit", style: "display: none;" %>
  <% end %>

  <div id="videos" class="grid grid-cols-4 gap-4 mt-4">
    <% @videos.each do |video| %>
      <div class="col-span-1">
        <%= render video %>
      </div>
    <% end %>
  </div>
</div>
