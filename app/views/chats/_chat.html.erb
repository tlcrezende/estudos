

<%= turbo_frame_tag 'current_chat' do %>
  <div id="<%= dom_id(chat) %>">
    <div class="flex h-screen antialiased text-gray-800">
      <div class="flex flex-row h-full w-full overflow-x-hidden">
        <div class="flex flex-col flex-auto h-full p-6">
          <div class="flex flex-col flex-auto flex-shrink-0 rounded-2xl bg-gray-100 h-full">
            <!-- Container das mensagens com scroll -->
            <div class="flex flex-col h-full overflow-y-auto p-4" style="width: 600px;" data-controller='scroll' >
              <div class="grid grid-cols-12 gap-y-2">
                <div class="col-start-1 col-end-8 p-3 rounded-lg">
                  <div class="flex flex-row items-center">
                    <div class="flex items-center justify-center h-10 w-10 rounded-full text-white bg-[#24346c] flex-shrink-0">
                      F
                    </div>
                    <div class="relative ml-3 text-sm bg-white py-2 px-4 shadow rounded-xl">
                      <div><%= chat.questions_and_answers.first %></div>
                    </div>
                  </div>
                </div>
                <% unless chat.questions_and_answers.blank? %>
                  <% chat.questions_and_answers[1..].each_slice(2) do |question, answer| %>
                    <div class="col-start-6 col-end-13 p-3 rounded-lg">
                      <div class="flex items-center justify-start flex-row-reverse">
                        <div class="flex items-center justify-center h-10 w-10 rounded-full text-white bg-[#24346c] flex-shrink-0">
                          U
                        </div>
                        <div class="relative mr-3 text-sm bg-indigo-100 py-2 px-4 shadow rounded-xl">
                          <div><%= question %></div>
                        </div>
                      </div>
                    </div>
                    <div class="col-start-1 col-end-8 p-3 rounded-lg">
                      <div class="flex flex-row items-center">
                        <div class="flex items-center justify-center h-10 w-10 rounded-full text-white bg-[#24346c] flex-shrink-0">
                          F
                        </div>
                        <div class="relative ml-3 text-sm bg-white py-2 px-4 shadow rounded-xl">
                          <div><%= answer.nil? ? '...' : answer %></div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
                <% if chat.closed? %>
                  <div class="col-start-1 col-end-8 p-3 rounded-lg">
                    <div class="flex flex-row items-center">
                      <div class="flex items-center justify-center h-10 w-10 rounded-full text-white bg-[#24346c] flex-shrink-0">
                        F
                      </div>
                      <div class="relative ml-3 text-sm bg-white py-2 px-4 shadow rounded-xl">
                        <div>Conversa encerrada, clique no bot√£o abaixo para obter o seu resumo =)</div>
                      </div>
                    </div>
                  </div>
                  <div class="col-start-1 col-end-8 p-3 rounded-lg">
                    <div class="flex flex-row items-center">
                      <div class="flex items-center justify-center h-10 w-10 rounded-full text-white bg-[#24346c] flex-shrink-0">
                        F
                      </div>
                      <div class="relative ml-3 text-sm bg-white py-2 px-4 shadow rounded-xl">
                        <%= link_to 'Acessar resumo', resume_path(chat.resume), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded', data: { turbo: false } %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <!-- Barra de envio de mensagem -->
            <div class="mt-auto">
                <%= form_with(model: chat, data: { controller: "form" }) do  |f| %>
                  <div class="flex flex-row items-center h-16 rounded-xl bg-white w-full px-4">
                    <div class="flex-grow ml-4">
                      <div class="relative w-full">
                        <%= f.text_field :message, 
                          placeholder: 'Enviar uma mensagem...', 
                          class: 'flex w-full border rounded-xl focus:outline-none focus:border-indigo-300 pl-4 h-10',
                          data: { form_target: "message" }  %>
                      </div>
                    </div>
                    <div class="ml-4">
                      <%= f.submit "#{chat.open? ? 'Enviar' : 'Encerrado'}", 
                      disabled: chat.closed?,
                      class: "flex items-center justify-center #{chat.open? ? "bg-[#24346c] hover:bg-indigo-600 cursor-pointer" : 'bg-slate-700'} rounded-xl text-white px-4 py-1 flex-shrink-0 ",
                      data: { action: "form#resetFocus" } %>
                    </div>
                  </div>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>